{
  "name": "ai-and-beyond-v6",
  "version": "6.0.0",
  "description": "Site vitrine professionnel AI & Beyond - Services IA et automatisation",
  "private": true,
  "scripts": {
    "dev": "npm run watch:css",
    "build": "npm run build:css && npm run minify",
    "build:css": "tailwindcss -i ./assets/css/tailwind.input.css -o ./assets/css/main.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/tailwind.input.css -o ./assets/css/main.css --watch",
    "minify": "npm run minify:js && npm run minify:html",
    "minify:js": "terser assets/js/main.js -o assets/js/main.min.js --compress --mangle",
    "minify:html": "html-minifier --input-dir . --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "optimize:images": "node scripts/optimize-images.js",
    "lighthouse": "lighthouse https://aiandbeyond.eu --view --output html --output-path ./lighthouse-report.html",
    "validate": "html-validator --file=index.html",
    "serve": "npx serve .",
    "deploy": "netlify deploy --prod"
  },
  "keywords": [
    "intelligence artificielle",
    "IA",
    "automatisation",
    "bots",
    "RAG",
    "prompt engineering",
    "consulting IA"
  ],
  "author": "AI & Beyond",
  "license": "UNLICENSED",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "terser": "^5.26.0",
    "html-minifier": "^4.0.0",
    "html-validator-cli": "^9.1.0",
    "sharp": "^0.33.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lighthouse": "^11.4.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
